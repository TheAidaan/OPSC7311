<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:padding="15dp"
    android:layout_gravity="center"
    android:background="@drawable/round_buttons"
    android:backgroundTint="#333333">




    <ImageButton
        android:id="@+id/btnClose_save_popup_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/end"
        android:layout_gravity="right"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toEndOf="@+id/btnProfile_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883" />

    <ImageView
        android:id="@+id/imgView_save_popup_menu"
        android:layout_width="182dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/test1"></ImageView>

    <TextView
        android:id="@+id/txtTitle_save_popup_menu"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTodo_save_popup_menu"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#C1C1C1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llScroll_save_popup_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</LinearLayout>