<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#517782"
    tools:context=".IntroductionActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="300dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/front" />

    <TextView
        android:id="@+id/txtWelcomeMessage_Introduction"
        android:layout_width="321dp"
        android:layout_height="110dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Time for an\nAdventure"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698" />

    <TextView
        android:id="@+id/txtTnC_Introduction"
        android:layout_width="321dp"
        android:layout_height="21dp"
        android:text="By Continuing you agree to my Terms and Conditions"
        android:textColor="#C1C1C1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp_Introduction"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAppleID_Introduction"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="@color/black"
        android:text="Apple ID"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp_Introduction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInWithEmail_Introduction"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btnGoogle_Introduction"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="@color/black"
        android:text="Google"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp_Introduction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInWithEmail_Introduction"
        app:layout_constraintVertical_bias="0.25" />

    <Button

        android:id="@+id/btnSignInWithEmail_Introduction"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="#1E90FF"
        android:text="Sign in with Username"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp_Introduction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeMessage_Introduction" />

    <Button
        android:id="@+id/btnSignUp_Introduction"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="@color/white"
        android:text="Sign Up"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeMessage_Introduction"
        app:layout_constraintVertical_bias="0.56" />

</androidx.constraintlayout.widget.ConstraintLayout>