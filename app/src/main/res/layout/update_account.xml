<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#517782"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/txtBack_UpdateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="10dp"
        android:text="Back"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtHeading_UpdateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Update Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editBox_one_UpdateAccount"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:hint="Enter your new email address"
        android:inputType="textWebEmailAddress|textEmailAddress"
        android:paddingLeft="10dp"

        android:selectAllOnFocus="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#C1C1C1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editBox_two_UpdateAccount"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:hint="Confirm your new email address"
        android:inputType="textWebEmailAddress|textEmailAddress"
        android:paddingLeft="10dp"
        android:selectAllOnFocus="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#C1C1C1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSave_UpdateAccount"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="#1A1A1A"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>