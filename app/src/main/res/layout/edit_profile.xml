<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#517782"
    android:backgroundTint="#517782"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtBack_ProfileSettings"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:text="Back"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="100dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/img_profilePicture_Settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@mipmap/camera" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtChangeProfilePicture_ProfileSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Change Profile Picture"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Name"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edtName_ProfileSettings"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#C1C1C1"
        android:layout_gravity="center"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Username"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
      />

    <EditText
        android:id="@+id/edtUsername_ProfileSettings"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edit_box"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#C1C1C1"
        android:layout_gravity="center"
        android:textSize="14sp"
        />
    <Button
        android:id="@+id/btnSave_ProfileSettings"
        android:layout_width="320dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="#1A1A1A"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>